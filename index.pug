doctype html
html(lang="zh-Hans-TW")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="To DO List" content="TO do list") 
        title To Do List
        link(rel="stylesheet" href="../styles/style.css")
        //- Bootstrap@5.2 include
        link(rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css")
    body
        .container 
            .logo 
                h1 To Do List.
            .input_div.mb-2 
                input.form-control(type="text" placeholder="What needs to be done?")
            .controller.d-flex.justify-content-between.align-items-center
                .view_control 
                    ul.nav.nav-tabs
                        li.nav-item 
                            a.nav-link.active(href="#") All 
                        li 
                            a.nav-link(href="#") Active
                        li 
                            a.nav-link(href='#') Complete
                span.me-2 3 Items left 

            .list 
                ul.list-group 
                    li.list-group-item.d-flex.justify-content-between 
                        .content
                            input.form-check-input.me-2(type="checkbox", name="") 
                            span Learning Python
                        span.cross#x X
                    li.list-group-item.d-flex.justify-content-between  
                        .content
                            input.form-check-input.me-2(type="checkbox", name="") 
                            span Make a todo list.
                        span.cross X
                    li.list-group-item.d-flex.justify-content-between 
                        .content
                            input.form-check-input.me-2(type="checkbox", name="") 
                            span JavaScript
                        span.cross X
                

        //- Bootstrao@5.2 include
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js")      
